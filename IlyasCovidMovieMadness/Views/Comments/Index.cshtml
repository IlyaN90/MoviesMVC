@model IEnumerable<IlyasCovidMovieMadness.Models.Comment>

@{
    ViewBag.Title = "Comment list";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("To Posts", "Index", "Posts", new { id = 1 }, null)
</p>

@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@item.Post.MovieTitle</h3>
        </div>
    </div>

    @Html.Partial("_CommentSummary", item)
}

